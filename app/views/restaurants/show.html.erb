<div class= "row">
  <div class="col-md-3">
    <%= image_tag(@restaurant.image_url) %>

    <h2>
      <%= @restaurant.name %>
    </h2>

    <div class="star-rating" data-score= <%= @avg_rating %> ></div>
    <p><%= "#{@reviews.length} reviews" %></p>

    <p>
      <strong>Address:</strong>
      <%= @restaurant.address %>
    </p>

    <p>
      <strong>Phone:</strong>
      <%= @restaurant.phone %>
    </p>

    <p>
      <strong>Website:</strong>
      <%= link_to @restaurant.website, @restaurant.website %>
    </p>

    <%= link_to "Write a Review", new_restaurant_review_path(@restaurant), class: "btn btn-primary" %>

  </div>

  <div class="col-md-9">
    <% if @reviews.empty? %>
      <h3>No reviews yet. Be the first to write one.</h3>
    <% else %>
      <table class="table">
        <thead>
          <tr>
            <th class="col-md-3"></th>
            <th class="col-md-9"></th>
          </tr>
        </thead>
        <tbody>
          <% @reviews.each do |review| %>
            <tr>
              <td>
                <h4>
                  <% if (review.user.first_name && review.user.last_name).blank? %>
                    <%= "Anonym" %>
                  <% else %>
                    <%= "#{review.user.first_name.capitalize} #{review.user.last_name.capitalize[0]}" %>
                  <% end %>
                </h4>
                <p><%= review.created_at.localtime.strftime '%Y-%m-%d' %></p>
              </td>
              <td>
                <div class="star-rating" data-score= <%= review.rating %>></div>
                <p><%= h(review.comment).gsub(/\n/, '<br/>').html_safe %></p>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    <% end %>
  </div>



<%= link_to 'Edit', edit_restaurant_path(@restaurant), class: "btn btn-link" %> |
<%= link_to 'Back', restaurants_path, class: "btn btn-link" %>

<script>
  $('.star-rating').raty({
    path: 'https://s3.amazonaws.com/mynewyelpapp/stars/',
    readOnly: true,
    score: function(){
      return $(this).attr('data-score');
    }
  });
</script>
